{
    "name": "syncterra-electron",
    "productName": "Syncterra",
    "version": "0.1.0",
    "description": "Audio file synchronization tool for various devices",
    "main": "dist/main.js",
    "scripts": {
        "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:electron\"",
        "dev:frontend": "cd ../frontend && npm run dev",
        "dev:electron": "wait-on http://localhost:5173 && tsc && electron .",
        "build:frontend": "cd ../frontend && npm run build",
        "build:backend": "cd .. && uv run pyinstaller backend.spec --distpath electron/resources --workpath build/pyinstaller --noconfirm",
        "build:electron": "tsc && electron-builder",
        "build": "npm run build:frontend && npm run build:backend && npm run build:electron",
        "compile": "tsc"
    },
    "keywords": [
        "Electron",
        "React",
        "Python",
        "FastAPI"
    ],
    "author": "Syncterra",
    "license": "GPL-3.0-or-later",
    "devDependencies": {
        "concurrently": "^9.1.2",
        "cross-env": "^7.0.3",
        "electron": "^34.0.0",
        "electron-builder": "^25.1.8",
        "ts-node": "^10.9.2",
        "typescript": "^5.7.3",
        "wait-on": "^8.0.2"
    },
    "dependencies": {},
    "build": {
        "appId": "com.syncterra.app",
        "productName": "Syncterra",
        "files": [
            "dist/**/*"
        ],
        "extraResources": [
            {
                "from": "resources/backend",
                "to": "backend"
            },
            {
                "from": "../frontend/dist",
                "to": "renderer"
            }
        ],
        "directories": {
            "buildResources": "assets",
            "output": "release"
        },
        "linux": {
            "target": [
                "AppImage"
            ],
            "category": "Audio"
        }
    }
}