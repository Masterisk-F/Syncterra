{
    "name": "syncterra-electron",
    "productName": "Syncterra",
    "version": "0.1.0",
    "description": "Audio file synchronization tool for various devices",
    "main": "dist/main.js",
    "scripts": {
        "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:electron\"",
        "dev:frontend": "cd ../frontend && npm run dev",
        "dev:electron": "wait-on http://localhost:5173 && tsc && electron .",
        "build": "tsc && electron-builder",
        "compile": "tsc"
    },
    "keywords": [
        "Electron",
        "React",
        "Python",
        "FastAPI"
    ],
    "author": "Syncterra",
    "license": "GPL-3.0-or-later",
    "devDependencies": {
        "electron": "^34.0.0",
        "electron-builder": "^25.1.8",
        "typescript": "^5.7.3",
        "ts-node": "^10.9.2"
    },
    "dependencies": {
        "electron-is-dev": "^3.0.1",
        "concurrently": "^9.1.2",
        "cross-env": "^7.0.3",
        "wait-on": "^8.0.2"
    },
    "build": {
        "appId": "com.syncterra.app",
        "productName": "Syncterra",
        "files": [
            "dist/**/*",
            "../frontend/dist/**/*"
        ],
        "directories": {
            "buildResources": "assets"
        },
        "linux": {
            "target": [
                "AppImage"
            ],
            "category": "Audio"
        }
    }
}